<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"

        android:layout_weight=".40"
        android:background="@color/list_item"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".60"
        android:background="@color/background">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_tile"
            android:layout_marginLeft="@dimen/info_margin"
            android:layout_marginRight="@dimen/info_margin"
            android:layout_marginBottom="@dimen/info_margin"
            android:layout_marginTop="@dimen/info_tile_margin"
            tools:ignore="Suspicious0dp">




            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/info_margin"
                android:paddingBottom="@dimen/info_margin"
                android:background="@drawable/info_inner">


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/info_margin"
                    android:layout_marginRight="@dimen/info_margin"
                    android:layout_marginTop="@dimen/info_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/info_separator"
                        android:layout_weight=".4"
                        android:background="@drawable/info_headings"
                        android:fontFamily="@font/baloo"
                        android:padding="@dimen/info_padding"
                        android:text="Type"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                         />

                    <TextView
                        android:id="@+id/image_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/info_details"
                        android:textColor="@color/text_main"
                        android:paddingBottom="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:paddingTop="@dimen/info_padding"
                        android:paddingRight="@dimen/info_padding"
                        android:paddingLeft="@dimen/info_padding_left"
                        android:text="Type"/>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/info_margin"
                    android:layout_marginRight="@dimen/info_margin"
                    android:layout_marginTop="@dimen/info_separator">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/info_headings"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/baloo"
                        android:layout_gravity="center"
                        android:padding="@dimen/info_padding"
                        android:layout_marginRight="@dimen/info_separator"
                        android:text="Established"
                        />

                    <TextView
                        android:id="@+id/image_established"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/info_details"
                        android:textColor="@color/text_main"
                        android:paddingBottom="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:paddingTop="@dimen/info_padding"
                        android:paddingRight="@dimen/info_padding"
                        android:paddingLeft="@dimen/info_padding_left"
                        android:text="Established"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/info_margin"
                    android:layout_marginRight="@dimen/info_margin"
                    android:layout_marginTop="@dimen/info_separator">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/info_headings"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/baloo"
                        android:padding="@dimen/info_padding"
                        android:layout_marginRight="@dimen/info_separator"
                        android:text="Handle"
                        />

                    <TextView
                        android:id="@+id/image_handle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/info_details"
                        android:textColor="@color/text_main"
                        android:paddingBottom="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:paddingTop="@dimen/info_padding"
                        android:paddingRight="@dimen/info_padding"
                        android:paddingLeft="@dimen/info_padding_left"
                        android:text="Handle"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/info_margin"
                    android:layout_marginRight="@dimen/info_margin"
                    android:layout_marginTop="@dimen/info_separator">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/info_headings"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:padding="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:layout_marginRight="@dimen/info_separator"
                        android:text="Colour"
                        />

                    <TextView
                        android:id="@+id/image_colour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/info_details"
                        android:textColor="@color/text_main"
                        android:paddingBottom="@dimen/info_padding"
                        android:paddingTop="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:paddingRight="@dimen/info_padding"
                        android:paddingLeft="@dimen/info_padding_left"
                        android:text="Colour"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/info_margin"
                    android:layout_marginRight="@dimen/info_margin"
                    android:layout_marginTop="@dimen/info_separator">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/info_headings"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:padding="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:layout_marginRight="@dimen/info_separator"
                        android:text="Fleece Weight"
                        />

                    <TextView
                        android:id="@+id/image_fleece"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/info_details"
                        android:textColor="@color/text_main"
                        android:paddingBottom="@dimen/info_padding"
                        android:paddingTop="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:paddingRight="@dimen/info_padding"
                        android:paddingLeft="@dimen/info_padding_left"
                        android:text="Fleece Weight"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/info_margin"
                    android:layout_marginRight="@dimen/info_margin"
                    android:layout_marginTop="@dimen/info_separator">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/info_headings"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:padding="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:layout_marginRight="@dimen/info_separator"
                        android:text="Staple Length"
                        />

                    <TextView
                        android:id="@+id/image_staple"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/info_details"
                        android:textColor="@color/text_main"
                        android:paddingBottom="@dimen/info_padding"
                        android:paddingTop="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:paddingRight="@dimen/info_padding"
                        android:paddingLeft="@dimen/info_padding_left"
                        android:text="Staple Length"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/info_margin"
                    android:layout_marginRight="@dimen/info_margin"
                    android:layout_marginTop="@dimen/info_separator">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:background="@drawable/info_headings"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:padding="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:layout_marginRight="@dimen/info_separator"
                        android:text="Micron Range"
                        />

                    <TextView
                        android:id="@+id/image_micron"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/info_details"
                        android:textColor="@color/text_main"
                        android:paddingBottom="@dimen/info_padding"
                        android:paddingTop="@dimen/info_padding"
                        android:fontFamily="@font/baloo"
                        android:paddingRight="@dimen/info_padding"
                        android:paddingLeft="@dimen/info_padding_left"
                        android:text="Micron Range"/>
                </TableRow>



            </TableLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>